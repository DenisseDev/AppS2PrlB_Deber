<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppS2PrlB_Deber.Login">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
                <Label Text="LOGIN" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
            </Frame>
            <Label Text="Ingrese su Login"/>
            <Entry x:Name="txtUsuario" />
            <Entry x:Name="txtContrasenia" IsPassword="true"/>
            <Button x:Name="btnLogin" Text="Login" Clicked="btnLogin_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>